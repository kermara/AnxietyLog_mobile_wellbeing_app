<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp">

    <TextView
        android:id="@+id/analysis_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Analysis"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/average_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/total_entries_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="200dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/change_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/avg_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="150dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/history_button_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/center_for_buttons"
       android:layout_centerHorizontal="true"
        android:minWidth="100dp"
        android:text="History"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/home_button_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/center_for_buttons"
        android:layout_alignParentLeft="true"
        android:text="Home"
        android:minWidth="100dp"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/use_for_centering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/use_for_centering"
        android:id="@+id/center_for_buttons"
        android:minWidth="100dp"
        android:layout_marginTop="258dp" />
</RelativeLayout>
