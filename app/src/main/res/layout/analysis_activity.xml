<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    android:background="@drawable/footer_bar">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/analysis_title"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/avg_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="170dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/average_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="240dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/change_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="310dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/total_entries_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="380dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/most_common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="170dp"
        android:textSize="14dp"
        android:text="Most common\nanxiety level:"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/average_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="240dp"
        android:textSize="14dp"
        android:text="Average points:"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/change_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="310dp"
        android:textSize="14dp"
        android:text="Change since\nlast test:"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/total_entries_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="380dp"
        android:textSize="14dp"
        android:text="Total test\nentries:"
        android:textColor="#000000"/>

 <TextView
     android:id="@+id/message_analysis"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
     android:layout_centerVertical="true"
     android:textSize="16dp"
     android:textColor="#000000"
  />

    <Button
        android:id="@+id/history_button_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/center_for_buttons"
       android:layout_centerHorizontal="true"
        android:minWidth="110dp"
        android:background="@drawable/history_button"/>

    <Button
        android:id="@+id/home_button_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/center_for_buttons"
        android:layout_alignParentLeft="true"
        android:minWidth="110dp"
       android:background="@drawable/home_button"/>
    <TextView
        android:id="@+id/use_for_centering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/use_for_centering"
        android:id="@+id/center_for_buttons"
        android:minWidth="100dp"
        android:layout_marginTop="258dp" />
</RelativeLayout>
