<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp">

    <TextView
        android:id="@+id/info_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Information"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/info_title2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="GAD-7 Anxiety Test"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/info_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:maxWidth="300dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/test_button_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/centering"
        android:textSize="16dp"
        android:text="To test" />

    <Button
        android:id="@+id/home_button_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Home"
        android:textSize="16dp"
        android:layout_alignBaseline="@+id/centering"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/centering"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/use_for_centering_in_info"
        android:layout_marginTop="237dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/use_for_centering_in_info"
        />

</RelativeLayout>
