<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/footer_bar"
    android:padding="16dp">

    <TextView
        android:id="@+id/score_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="You got x points"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/info_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Description of the result"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/desc_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="15dp" />

    <Button
        android:id="@+id/home_button_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/history_button_result"
        android:layout_alignParentLeft="true"
        android:background="@drawable/home_button"
        android:minWidth="110dp" />

    <Button
        android:id="@+id/history_button_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_result"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/history_button"
        android:minWidth="110dp" />

    <Button
        android:id="@+id/analysis_button_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/history_button_result"
        android:layout_alignParentRight="true"
        android:background="@drawable/analysis_button"
        android:minWidth="110dp" />


</RelativeLayout>
